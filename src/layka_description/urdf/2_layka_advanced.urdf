<robot name="layka">

  <!-- Base-->

  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>          
          <cylinder length="0.062" radius="0.07"/>
      </geometry>
      <material name="red">
        <color rgba=".8 .2 .2 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>          
          <cylinder length="0.062" radius="0.07"/>
      </geometry>
      <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="5" />
      <inertia ixx="0.01" ixy="0.0" ixz="0" 
            iyy="0.01" iyz="0" izz="0.01" />
    </inertial>

  </link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.37" rpy="0 0 0"/>
  </joint>
  
  <!-- Wheel - left -->

   <link name="wheel_left_link">

    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
          <cylinder radius="0.015" length="0.005"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
          <cylinder radius="0.015" length="0.005"/>
      </geometry>
      <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="1" />
      <inertia ixx="0.01" ixy="0.0" ixz="0" 
            iyy="0.01" iyz="0" izz="0.01" />
    </inertial>

  </link>

  <joint name="wheel_left_joint" type="continuous">
    <origin xyz="0.0 0.068 -0.026" rpy="-1.57 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <axis xyz="0.0 0.0 1.0"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <!-- Wheel - right -->

  <link name="wheel_right_link">

    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
          <cylinder radius="0.015" length="0.005"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
          <cylinder radius="0.015" length="0.005"/>
      </geometry>
      <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="2" />
      <inertia ixx="0.01" ixy="0.0" ixz="0" 
            iyy="0.01" iyz="0" izz="0.01" />
    </inertial>

  </link>

  <joint name="wheel_right_joint" type="continuous">
    <origin xyz="0.0 -0.068 -0.026" rpy="-1.57 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <axis xyz="0.0 0.0 1.0"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <!-- Caster - front -->

  <link name="caster_front_link">

    <visual>    
      <geometry>
        <sphere radius="0.006" />
      </geometry>
      <material name="white" />
    </visual>

    <collision>
      <origin/>
      <geometry>
        <sphere radius="0.006" />
      </geometry>
      <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>

  </link>

  <joint name="caster_front_joint" type="fixed">
    <origin xyz="0.06 0.0 -0.035" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 0 1" />
    <parent link="base_link"/>
    <child link="caster_front_link"/>
  </joint>

  <!-- Caster - back -->

  <link name="caster_back_link">

    <visual>    
      <geometry>
        <sphere radius="0.006" />
      </geometry>
      <material name="white" />
    </visual>

    <collision>
      <origin/>
      <geometry>
        <sphere radius="0.006" />
      </geometry>
      <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>

  </link>

  <joint name="caster_back_joint" type="fixed">
    <origin xyz="-0.06 0.0 -0.035" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 0 1" />
    <parent link="base_link"/>
    <child link="caster_back_link"/>
  </joint> 

  <!-- IMU -->

  <link name="imu_link"> 
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
  </joint>

  <!-- Lidar -->

  <link name="lidar_platform_link">
    <visual>      
      <geometry>
        <cylinder radius="0.040" length="0.042"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <inertial>
      <mass value="0.5" />
        <inertia ixx="0.01" ixy="0.0" ixz="0" 
          iyy="0.01" iyz="0" izz="0.01" />
    </inertial>
  </link>

  <link name="lidar_scanner_link">
    <visual>      
      <geometry>
        <cylinder radius="0.035" length="0.024"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <inertial>
      <mass value="0.5" />
        <inertia ixx="0.01" ixy="0.0" ixz="0" 
          iyy="0.01" iyz="0" izz="0.01" />
    </inertial>
  </link>

  <joint name="lidar_platform_joint" type="fixed">
    <origin xyz="0 0 0.0455" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_platform_link"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <joint name="lidar_scanner_joint" type="fixed">
    <origin xyz="0 0 0.0785" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_scanner_link"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <!-- Camera -->

  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.004 0.031 0.031"/>
      </geometry>

      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>

      <inertial>
              <mass value="0.1" />
              <inertia ixx="0.01" ixy="0.0" ixz="0" 
              iyy="0.01" iyz="0" izz="0.01" />
      </inertial>
    </visual>

    <collision>
      <geometry>
          <box size="0.1 0.1 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.07 0 0.060" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="camera_link"/>
    <axis xyz="0.0 0.0 1.0"/>
  </joint>

  <gazebo reference="caster_front_link">
    <material>Gazebo/White</material>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <gazebo reference="caster_front_link">
    <material>Gazebo/White</material>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>



<!-- Gazebo colors to links as upper defined colors are only visible in RVIZ-->
<gazebo reference="base_link">
  <material>Gazebo/DarkGrey</material>
</gazebo>

<gazebo reference="wheel_right_link">
  <material>Gazebo/Grey</material>
</gazebo>

<gazebo reference="wheel_left_link">
  <material>Gazebo/Grey</material>
</gazebo> 

<gazebo reference="lidar_platform_link">
  <material>Gazebo/Grey</material>
</gazebo> 

<gazebo reference="lidar_scanner_link">
  <material>Gazebo/Grey</material>
</gazebo> 

<gazebo reference="camera_link">
  <material>Gazebo/Grey</material>
</gazebo>

<!-- Differential drive plugin -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="gazebo_base_controller">
      <odometry_frame>odom</odometry_frame>
      <commandTopic>cmd_vel</commandTopic>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <update_rate>15.0</update_rate>
      <left_joint>wheel_left_joint</left_joint>
      <right_joint>wheel_right_joint</right_joint>
      <wheel_separation>0.136</wheel_separation>
      <wheel_diameter>0.03</wheel_diameter>
      <max_wheel_acceleration>0.7</max_wheel_acceleration>
      <max_wheel_torque>8</max_wheel_torque>
      <robotBaseFrame>base_link</robotBaseFrame>

    </plugin>
  </gazebo>

<!-- IMU  - Gazebo -->
  <gazebo reference="imu_link">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>

      <imu>
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
            </noise>
          </z>
        </angular_velocity>
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>

      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <ros>
            <remapping>~/out:=imu</remapping>
        </ros>
        <topicName>imu</topicName>
        <bodyName>imu_link</bodyName>
        <updateRateHZ>10.0</updateRateHZ>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>
      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>

<!-- Lidar - Gazebo -->
  <gazebo reference="lidar_scanner_link">
    <sensor name="gazebo_lidar" type="ray">
     <visualize>true</visualize>
      <update_rate>5.5</update_rate>
      <plugin filename="libgazebo_ros_ray_sensor.so" name="gazebo_lidar">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar</frame_name>
      </plugin>
      <ray>
        
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>-6.28</max_angle>
          </horizontal>
        </scan>

        <range>
          <min>0.15</min>
          <max>12</max>
          <resolution>0.002</resolution>
        </range>
        
          <!-- EXAMPLE NOISE: Noise parameters based on published spec for Hokuyo laser
               achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
               stddev of 0.01m will put 99.7% of samples within 0.03m of the true
               reading. 
          <mean>0.0</mean>
          <stddev>0.01</stddev>
          -->

        <!--
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
        -->

      </ray>
    </sensor>
  </gazebo>

  <!-- Camera - Gazebo -->

  <gazebo reference="camera_link">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>/camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
      </plugin>
    </sensor>
  </gazebo>

</robot>
